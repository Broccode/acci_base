FROM rust:1.82-slim

# Install test dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

# Install test tools
RUN cargo install cargo-nextest cargo-tarpaulin cargo-audit

# Test configuration
ENV RUST_BACKTRACE=1
ENV RUST_LOG=debug
ENV TEST_MODE=1

# Default command runs all tests
CMD ["cargo", "nextest", "run", "--all-features"]

# Alternative commands available:
# - cargo tarpaulin --all-features (for coverage)
# - cargo audit (for security audit)
# - cargo clippy --all-features (for linting)
