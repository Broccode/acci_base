{{ define "teams.card" }}
{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "type": "AdaptiveCard",
        "version": "1.2",
        "msteams": {
          "width": "Full"
        },
        "body": [
          {
            "type": "Container",
            "style": "{{ if eq .Status "firing" }}{{ if eq .CommonLabels.severity "critical" }}attention{{ else }}warning{{ end }}{{ else }}good{{ end }}",
            "items": [
              {
                "type": "TextBlock",
                "size": "Large",
                "weight": "Bolder",
                "text": "{{ .Status | toUpper }}: {{ .CommonLabels.alertname }}",
                "wrap": true
              },
              {
                "type": "FactSet",
                "facts": [
                  {
                    "title": "Environment",
                    "value": "{{ .CommonLabels.environment }}"
                  },
                  {
                    "title": "Cluster",
                    "value": "{{ .CommonLabels.cluster }}"
                  },
                  {
                    "title": "Service",
                    "value": "{{ .CommonLabels.service }}"
                  }
                ]
              }
            ]
          },
          {{ if gt (len .Alerts.Firing) 0 }}
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "ðŸš¨ Active Alerts ({{ .Alerts.Firing | len }})",
                "wrap": true
              }
            ]
          },
          {{ range .Alerts.Firing }}
          {
            "type": "Container",
            "style": "{{ if eq .Labels.severity "critical" }}attention{{ else }}warning{{ end }}",
            "items": [
              {
                "type": "TextBlock",
                "text": "**{{ .Labels.alertname }}** - `{{ .Labels.severity }}`",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "{{ .Annotations.description }}",
                "wrap": true
              },
              {
                "type": "FactSet",
                "facts": [
                  {
                    "title": "Started",
                    "value": "{{ .StartsAt }}"
                  }
                ]
              },
              {
                "type": "TextBlock",
                "text": "**Labels:**",
                "wrap": true
              },
              {
                "type": "Container",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "{{ range .Labels.SortedPairs }}â€¢ {{ .Name }}: `{{ .Value }}`\n{{ end }}",
                    "wrap": true
                  }
                ]
              }
            ]
          },
          {{ if or .Annotations.runbook_url .Annotations.dashboard_url }}
          {
            "type": "ActionSet",
            "actions": [
              {{ if .Annotations.dashboard_url }}
              {
                "type": "Action.OpenUrl",
                "title": "ðŸ“Š View Dashboard",
                "url": "{{ .Annotations.dashboard_url }}"
              },
              {{ end }}
              {{ if .Annotations.runbook_url }}
              {
                "type": "Action.OpenUrl",
                "title": "ðŸ“š View Runbook",
                "url": "{{ .Annotations.runbook_url }}"
              }
              {{ end }}
            ]
          },
          {{ end }}
          {{ end }}
          {{ end }}
          {{ if gt (len .Alerts.Resolved) 0 }}
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "âœ… Resolved Alerts ({{ .Alerts.Resolved | len }})",
                "wrap": true
              }
            ]
          },
          {{ range .Alerts.Resolved }}
          {
            "type": "Container",
            "style": "good",
            "items": [
              {
                "type": "TextBlock",
                "text": "**{{ .Labels.alertname }}** resolved",
                "wrap": true
              },
              {
                "type": "FactSet",
                "facts": [
                  {
                    "title": "Duration",
                    "value": "{{ .StartsAt.Unix | since }}"
                  },
                  {
                    "title": "Resolved At",
                    "value": "{{ .EndsAt }}"
                  }
                ]
              }
            ]
          },
          {{ end }}
          {{ end }}
          {{ if .CommonAnnotations.playbook }}
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "ðŸ”§ Playbook",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "{{ .CommonAnnotations.playbook }}",
                "wrap": true
              }
            ]
          },
          {{ end }}
          {{ if .CommonAnnotations.impact }}
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "ðŸ’¥ Impact",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "{{ .CommonAnnotations.impact }}",
                "wrap": true
              }
            ]
          }
          {{ end }}
        ]
      }
    }
  ]
}
{{ end }} 